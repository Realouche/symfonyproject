{% extends 'base.html.twig' %}

{% block body %}
<!-- Breadcrumb -->
			<div class="breadcrumb-bar">
				<div class="container-fluid">
					<div class="row align-items-center">
						<div class="col-md-12 col-12">
							<nav aria-label="breadcrumb" class="page-breadcrumb">
								<ol class="breadcrumb">
									<li class="breadcrumb-item"><a href="index-2.html">Home</a></li>
									<li class="breadcrumb-item active" aria-current="page">Booking</li>
								</ol>
							</nav>
							<h2 class="breadcrumb-title">Booking</h2>
						</div>
					</div>
				</div>
			</div>
			<!-- /Breadcrumb -->
			
			<!-- Page Content -->
			<div class="content">
				<div class="container">
				
					<div class="row">
						<div class="col-12">
							<div class="card">
								<div class="card-body">
									<div class="booking-doc-info">
										<a href="doctor-profile.html" class="booking-doc-img">
											<img src="assets/img/doctors/doctor-thumb-02.jpg" alt="User Image">
										</a>
										<div class="booking-info">
											<h4><a href="doctor-profile.html">Dr. {{user.username|e}}</a></h4>
											<div class="rating">
												<i class="fas fa-star filled"></i>
												<i class="fas fa-star filled"></i>
												<i class="fas fa-star filled"></i>
												<i class="fas fa-star filled"></i>
												<i class="fas fa-star"></i>
												<span class="d-inline-block average-rating">35</span>
											</div>
											<p class="text-muted mb-0"><i class="fas fa-map-marker-alt"></i> {{user.adresse}} </p>
										</div>
									</div>
								</div>
							</div>
							{{ form_start(form , {'attr': {'class': 'row form-row'}}) }}
								<div class="col-md-7 col-lg-8 col-xl-9">
									<div class="card">
										<div class="card-body">
											<div class="col-12 col-md-6">
												<div class="form-group">
													<label>Date of Appointment</label>
													{{ form_widget(form.date, { 'attr': {'class': 'form-control datetimepicker'} }) }}
												</div>
											</div>
											<div class="col-12 col-md-6">
												<div class="form-group">
													<label>Time of Appointment</label>
													{{ form_widget(form.hour, { 'attr': {'class': 'form-control timepicker'} }) }}
												</div>
											</div>
											<div class="submit-section mt-4">
												<button type="submit" class="btn btn-primary submit-btn">Confirm</button>
											</div>
										</div>
									</div>
								</div>
								
							{{ form_end(form) }}
						</div>
                        <script>
                            function change_class_select(){
                            $("a").click(function() {
								$("a").removeClass();
								$("a").addClass("timing");

                            }
                        </script>

					</div>
				</div>

			</div>		
			<!-- /Page Content -->
{% endblock %}